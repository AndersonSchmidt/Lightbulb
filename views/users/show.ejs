<% include ../partials/header.ejs %>

<br>
<br>

<div class="row">
    <div class="col-md-4">
        <div class="thumbnail">
            <img src="<%= user.avatarPath %>" style="border-radius: 5px">
        </div>
        <% if(currentUser && (user._id.equals(currentUser._id) || currentUser.isAdmin)) { %>
            <a href="/users/<%=user.id%>/edit" class="btn btn-warning" style="border: none; color: #574b4f">Edit</a>
            <form action="/users/<%=user.id%>?_method=DELETE" method="POST" class="delete-form" style="display: inline">
                <button class="btn btn-danger" style="border: none; color: #574b4f">Delete</button>
            </form>
        <% } %>
    </div>

    <div class="col-md-4">
        <h2><%= user.username %></h2>
        <p><%= user.bio %></p>
    </div>

    <div class="col-md-4">
        <h3>Ideas</h3>
        <ul>
            <% ideas.forEach(function(idea){ %>
                <li><a href="/ideas/<%= idea.id %>"> <%= idea.name %> </a></li>
            <% }) %>
        </ul>
    </div>

</div>

<% include ../partials/footer.ejs %>