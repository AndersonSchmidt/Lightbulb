<% include ./partials/header.ejs %>

    <div class="row justify-content-center">
        <h1 class="text-center">Reset Password</h1>
        <br>
        <div class="col-md-4 col-md-offset-4">
            <form action="/reset/<%= token %>" method="POST">
                
                <div class="form-group">
                    <input type="password" class="form-control formInput" name="password" placeholder="New Password" required>
                </div>

                <div class="form-group">
                    <input type="password" class="form-control formInput" name="confirm" placeholder="Confirm Password" required>
                </div>
            
                <div class="form-group">
                        <button class="btn btn-lg btn-block submitButton">Update Password</button>
                </div>

            </form>
        </div>
    </div>
<% include ./partials/footer %>