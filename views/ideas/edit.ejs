<% include ../partials/header.ejs %>

    <div class="row justify-content-center">
        <h1 class="text-center">Edit <%= idea.name %></h1>
        <br>
        <div class="col-md-4 col-md-offset-4">
            <form action="/ideas/<%=idea._id%>?_method=PUT" method="POST" enctype="multipart/form-data">
                
                <div class="form-group">
                    <input type="text" class="form-control formInput" name="idea[name]" placeholder="Name" value="<%= idea.name %>" required>
                </div>

                <div class="form-group">
                    <textarea class="form-control formInput" rows="6" name="idea[description]" placeholder="Description" required><%= idea.description %></textarea>                    
                </div>

                <div class="form-group">
                    <input type="text" class="form-control formInput" name="idea[contributorEmail]" placeholder="Add contributor email">
                </div>

                <div class="form-group">
                    <label id="imageLabel" class="btn btn-block formInput" for="image"> Upload Image <i class="fas fa-cloud-upload-alt"></i></label>
                    <input type="file" class="btn btn-block formInput" id="image" name="image" accept="image/*" style="display: none">
                </div>

                <!-- Adding the file name to the upload image label-->
                <script type="text/javascript">
                    var input = document.getElementById('image');
                    var label = document.getElementById('imageLabel');

                    input.addEventListener('change', function(){
                        if(this.value == ""){
                            label.textContent = "You must upload an Image!";
                        }else{
                            if(this.value.length > 50){
                                label.textContent = this.value.slice(12, 50) + "...";
                            }else{
                                label.textContent = this.value.slice(12);
                            }                         
                        }    
                    });
                </script>
            
                <div class="form-group">
                        <button class="btn btn-lg btn-block submitButton">Submit</button>
                </div>

            </form>
            <a href="/ideas">Go Back</a>
        </div>
    </div>
<% include ../partials/footer %>