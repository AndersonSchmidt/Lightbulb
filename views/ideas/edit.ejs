<% include ../partials/header.ejs %>

    <div class="row justify-content-center">
        <h1 class="text-center">Edit <%= idea.name %></h1>
        <br>
        <div class="col-md-4 col-md-offset-4">
            <form action="/ideas/<%=idea._id%>?_method=PUT" method="POST" enctype="multipart/form-data">
                
                <div class="form-group">
                    <input type="text" class="form-control formInput" name="idea[name]" value="<%= idea.name %>">
                </div>

                <div class="form-group">
                    <input type="text" class="form-control formInput" name="idea[user]" value="<%= idea.user %>">
                </div>

                <div class="form-group">
                    <textarea class="form-control formInput" name="idea[description]"><%= idea.description %></textarea>                    
                </div>

                <div class="form-group">
                    <label id="imageLabel" class="btn btn-block formInput" for="image"> Upload Image <i class="fas fa-cloud-upload-alt"></i></label>
                    <input type="file" class="btn btn-block formInput" id="image" name="image" accept="image/*" style="display: none">
                </div>

                <script type="text/javascript">
                    var input = document.getElementById('image');
                    var label = document.getElementById('imageLabel');

                    input.addEventListener('change', function(){
                        label.textContent = this.value;
                    });
                </script>
            
                <div class="form-group">
                        <button class="btn btn-lg btn-block submitButton">Submit</button>
                </div>

            </form>
            <a href="/ideas">Go Back</a>
        </div>
    </div>
<% include ../partials/footer %>