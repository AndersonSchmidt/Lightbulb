<% include ../partials/header.ejs %>
    <style>
        ::placeholder {
            color: #efdab9 !important;
            opacity: 0.6;
        }
    </style>

    <div class="row justify-content-center">
        <h1 style="text-align: center">Create a New Idea</h1>
        <br>
        <div class="col-md-4 col-md-offset-4">
            <form action="/ideas" method="POST" enctype="multipart/form-data">
                
                <div class="form-group">
                    <input type="text" style="color: #efdab9; background-color: #343233; border-color: #574b4f" class="form-control" name="idea[name]" placeholder="Name">
                </div>

                <div class="form-group">
                    <textarea style="color: #efdab9; background-color: #343233; border-color: #574b4f" class="form-control" name="idea[description]" placeholder="Description"></textarea>                    
                </div>

                <div class="form-group">
                    <label id="imageLabel" style="color: #efdab9; background-color: #343233; border-color: #574b4f" class="btn btn-info btn-block" for="image"> Upload Image <i class="fas fa-cloud-upload-alt"></i></label>
                    <input type="file" id="image" name="image" accept="image/*" required style="display: none">
                </div>

                <script type="text/javascript">
                    var input = document.getElementById('image');
                    var label = document.getElementById('imageLabel');

                    input.addEventListener('change', function(){
                        label.textContent = this.value;
                    });
                </script>
            
                <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block" style="background-color: #efdab9; color: #343233; border: none">Submit</button>
                </div>

            </form>
            <a href="/ideas">Go Back</a>
        </div>
    </div>
<% include ../partials/footer %>