<% include ../partials/header.ejs %>

    <div class="row justify-content-center">
        <h1 class="text-center">Create a New Idea</h1>
        <br>
        <div class="col-md-4 col-md-offset-4">
            <form action="/ideas" method="POST" enctype="multipart/form-data">
                
                <div class="form-group">
                    <input type="text" class="form-control formInput" name="idea[name]" placeholder="Name">
                </div>

                <div class="form-group">
                    <input type="text" class="form-control formInput" name="idea[user]" placeholder="User">
                </div>

                <div class="form-group">
                    <textarea class="form-control formInput" name="idea[description]" placeholder="Description"></textarea>                    
                </div>

                <div class="form-group">
                    <label id="imageLabel" class="btn btn-block formInput" for="image"> Upload Image <i class="fas fa-cloud-upload-alt"></i></label>
                    <input type="file" class="btn btn-block formInput" id="image" name="image" accept="image/*" required style="display: none">
                </div>

                <!-- Adding the file name to the upload image label-->
                <script type="text/javascript">
                    var input = document.getElementById('image');
                    var label = document.getElementById('imageLabel');

                    input.addEventListener('change', function(){
                        if(this.value == ""){
                            label.textContent = "You must upload an Image!";
                        }else{
                            label.textContent = this.value.slice(12);
                        }
                        
                    });
                </script>
            
                <div class="form-group">
                        <button class="btn btn-lg btn-block submitButton">Submit</button>
                </div>

            </form>
            <a href="/ideas">Go Back</a>
        </div>
    </div>
<% include ../partials/footer %>