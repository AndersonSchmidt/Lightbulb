<html>
    <head>
        <!-- Make site responsive on mobile/tablet -->
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>
            Lightbulb
        </title>
        <link rel="stylesheet" href="/stylesheets/bootstrap.min.css">
        <link rel="stylesheet" href="/fontawesome-free-5.11.2-web/css/all.css">
        <link rel="stylesheet" href="/stylesheets/main.css">
        <link rel="icon" href="favicon.ico"/>
        <script type="text/javascript" src="/scripts/howler.min.js"></script>
        <script type="text/javascript">

            var sound;
            var listen = false;

            function toggleListen() {
                this.listen = !this.listen;
                var earIcon = $('.fa-assistive-listening-systems');

                earIcon.css('color') == 'rgb(239, 218, 185)' ?  earIcon.css('color', '#FFCC00') : earIcon.css('color', '#efdab9');
            }

            function textToSpeech(text) {
                if(listen) {
                    console.log(text);
                    
                    const reqBody = {
                        audioConfig: {
                            audioEncoding: 'LINEAR16',
                            pitch: 0,
                            speakingRate: 1
                        },
                        input: {
                            text: text
                        },
                        voice: {
                            languageCode: 'en-US',
                            name: 'en-US-Standard-D'
                        }
                    };

                    $.ajax({
                        contentType: 'application/json',
                        data: JSON.stringify(reqBody),
                        dataType: 'json',
                        success: (res) => {
                            if(this.sound) {
                                this.sound.stop()
                            }
                            this.sound = new Howl({
                                src: ['data:audio/x-mp3;base64,' + res.audioContent]
                            });
                            this.sound.play();
                        },
                        error: (err) => {
                            console.log(err);
                        },
                        processData: false,
                        type: 'POST',
                        url: 'https://texttospeech.googleapis.com/v1beta1/text:synthesize?key=AIzaSyBSiibghtq7Vo-j_i3WB6TD9Oq1Pxx2hkg'
                    });
                }
            }
        </script>
    </head>
    <body>
        <nav class="navbar navbar-default">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" id="burgerButton" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="/ideas" onfocus="textToSpeech('Homepage')"><i class="far fa-lightbulb"></i> Lightbulb</a>
                </div>
                <div id="navbar" class="collapse navbar-collapse">
                    <!-- <ul class="nav navbar-nav">
                        <li class=""><a href="/ideas">Home</a></li>
                    </ul> -->

                    <form action="/ideas" method="GET" class="navbar-form navbar-left"  style="border: 0; display: flex;">
                        <div class="form-group">
                          <input type="text" class="form-control formInput" style="width: 18em; margin-right: 5px" name="search" placeholder="Search an Idea" onfocus="textToSpeech('Search an Idea')">
                        </div>
                        <button type="submit" class="btn submitButton" name="submit" onfocus="textToSpeech('Submit Search')">Submit</button>
                    </form>

                    <ul class="nav navbar-nav navbar-right">
                        <li class=""><a href="/faq" onfocus="textToSpeech('FAQ')"><i class="fas fa-question"></i> FAQ</a></li>
                        <li class="" onclick="toggleListen()"><span style="display: block; position: relative; cursor: pointer; padding: 15px;"><i class="fas fa-assistive-listening-systems"></i> Listen</span></li>
                        <% if(!currentUser){ %>
                            <li class=""><a href="/login" onfocus="textToSpeech('Login')"><i class="fas fa-sign-in-alt"></i> Login</a></li>
                            <li class=""><a href="/register" onfocus="textToSpeech('Sign Up')"><i class="fas fa-user-plus"></i> Sign Up</a></li>
                        <% }else{ %>
                            <li class=""><a href="/users/<%= currentUser.id %>"><i class="fas fa-user"></i> <%= currentUser.username %></a></li>
                            <li class=""><a href="/logout" onfocus="textToSpeech('Logout')"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
                        <% } %>
                    </ul>                    
                </div>
            </div>
        </nav>

        <div class="container">

            <% if(error && error.length){ %>
                <div class="alert alert-danger">
                    <%= error %>
                </div>
            <% } %>
            <% if(success && success.length){ %>
                <div class="alert alert-success">
                    <%= success %>
                </div>
            <% } %>
        