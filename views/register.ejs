<% include ./partials/header.ejs %>

    <div class="row justify-content-center">
        <h1 class="text-center">Register to Lightbulb!</h1>
        <br>
        <div class="col-md-4 col-md-offset-4">
            <form action="/register" method="POST">
                
                <div class="form-group">
                    <input type="text" class="form-control formInput" name="username" placeholder="Username">
                </div>

                <div class="form-group">
                    <input type="password" class="form-control formInput" name="password" placeholder="Password">
                </div>
            
                <div class="form-group">
                        <button class="btn btn-lg btn-block submitButton">Sign Up</button>
                </div>

            </form>
            <a href="javascript:history.back()">Go Back</a>
        </div>
    </div>
