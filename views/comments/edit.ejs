<% include ../partials/header.ejs %>

    <div class="row justify-content-center">
        <h1 class="text-center">Edit Comment</h1>
        <br>
        <div class="col-md-4 col-md-offset-4">
            <form action="/ideas/<%= idea_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">

                <div class="form-group">
                    <textarea class="form-control formInput" name="comment[text]" required><%= comment.text %></textarea>                    
                </div>
            
                <div class="form-group">
                        <button class="btn btn-lg btn-block submitButton">Submit</button>
                </div>

            </form>
            <a href="/ideas/<%= idea_id %>">Go Back</a>
        </div>
    </div>
<% include ../partials/footer %>